<Window x:Class="VerificationAirVelocitySensor.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:VerificationAirVelocitySensor.ViewModel"
        mc:Ignorable="d"
        Background="MediumSeaGreen"
        Title="MainWindow"
        Height="400"
        Width="500">
    <Window.DataContext>
        <viewModel:MainWindowVm />
    </Window.DataContext>
    <Grid>
        <TextBox HorizontalAlignment="Left"
                 Height="23"
                 Margin="10,10,0,0"
                 TextWrapping="Wrap"
                 Text="{Binding CustomCommandText}"
                 VerticalAlignment="Top"
                 Width="303" />
        <Button Content="Send"
                Command="{Binding SendCustomCommand}"
                HorizontalAlignment="Left"
                Margin="327,10,0,0"
                VerticalAlignment="Top"
                Width="75"
                Height="23" />
        <Button Content="*RST"
                Command="{Binding ResetCommand}"
                HorizontalAlignment="Left"
                Margin="10,54,0,0"
                VerticalAlignment="Top"
                Width="75" />
        <Button Content="On Filter"
                Command="{Binding OnFilterCommand}"
                HorizontalAlignment="Left"
                Margin="90,54,0,0"
                VerticalAlignment="Top"
                Width="75" />
        <Button Content="Off Filter"
                Command="{Binding OffFilterCommand}"
                HorizontalAlignment="Left"
                Margin="170,54,0,0"
                VerticalAlignment="Top"
                Width="75" />
        <TextBox HorizontalAlignment="Left"
                 Height="163"
                 IsReadOnly="True"
                 Margin="10,96,0,0"
                 TextWrapping="Wrap"
                 Text="{Binding DataRead}"
                 VerticalAlignment="Top"
                 Width="422" />
        <Button Content="Open / Close Port"
                Command="{Binding OpenClose}"
                HorizontalAlignment="Left"
                Height="23"
                Margin="10,276,0,0"
                VerticalAlignment="Top"
                Width="120" />
    </Grid>
</Window>
